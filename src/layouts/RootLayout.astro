---
import Seo from '../components/Seo.astro';
import AppWrapper from '../web/components/AppWrapper';

interface Props {
  title: string;
  description: string;
  keywords: string[];
  url?: string;
}

const { title, description, keywords, url } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/images/icons/icon-72x72.png" />
		<meta name="generator" content={Astro.generator} />
		<Seo {title} {description} {keywords} {url} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #000;
		color: #fff;
	}
</style>
